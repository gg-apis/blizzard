{
  "name": "gg-apis/blizzard",
  "description": "A performant, type-safe, well-tested API client for Blizzard games",
  "license": ["MIT"],
  "minimum-stability": "beta",
  "require": {
    "php": "^8.1",
    "amphp/http": "^v2.1",
    "amphp/http-client": "^5.0",
    "cspray/http-request-builder": "^1.3",
    "cuyz/valinor": "1.14",
    "amphp/cache": "^2.0"
  },
  "require-dev": {
    "cspray/http-client-test-interceptor": "dev-main",
    "phpunit/phpunit": "^10.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "GGApis\\Blizzard\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GGApis\\Blizzard\\Test\\": "tests"
    }
  }
}
